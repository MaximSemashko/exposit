<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ButtonColorYellow</item>
        <item name="colorPrimaryDark">@color/ButtonColorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextLimitStyle" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">18sp</item>
    </style>

    <style name="TextLimitError" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">@color/colorRed</item>
    </style>

</resources>
